{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/index.js"
        }
    ],

    "functions": {
        "api/index.js": {
            "maxDuration": 30 // allow up to 30 s (was 10 s)
        }
    }
}

